<!DOCTYPE html>
<html>

<head>
  <title>Intro to Node and MongoDB</title>


</head>
<style>
  body {
    margin: 5% auto;
    width: 600px;
  }

  td {
    padding: 10px;
    text-align: center;

  }

  button {

    padding: 10px;
    font-size: 20px;
    border: none;
    font-weight: 700;
  }

  p {
    font-weight: 700;
  }

  th {
    font-weight: 800;
    padding: 5px;
  }
</style>

<body>
  <div class="container">
    <form method="get" action="/">
      <button type="submit" class="btn">Add New</button>
    </form>
  </div>
  <br>
  <% if(student!=null) { %>
    <table border="1px">
      <tr>
        <th>Name</th>

        <th>Roll no </th>
        <th>WAD </th>
        <th>DSBDA</th>
        <th>CNS</th>
        <th>CC</th>
        <th>AI</th>
      </tr>
      <% student.forEach(function(item){ %>
        <tr>
          <td>
            <%= item.name%>
          </td>

          <td>
            <%= item.rollno%>
          </td>
          <td>
            <%= item.wad_marks%>
          </td>
          <td>
            <%= item.dsbda_marks%>
          </td>
          <td>
            <%= item.cns_marks%>
          </td>
          <td>
            <%= item.cc_marks%>
          </td>
          <td>
            <%= item.ai_marks%>
          </td>
          <td>
            <form method="post" action="/delete/<%= item._id %>">
              <button type="submit" class="btn">Delete</button>
            </form>
          </td>
          <td>

            <form method="get" action="/update-user/<%= item._id %>">
              <button type="submit" class="btn">Update</button>
            </form>
          </td>

        </tr>
        <% }) %>
    </table>
    <p>Total Documents: <%= student.length %>
    </p>
    <% } %>
</body>

</html>